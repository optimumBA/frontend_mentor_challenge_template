{
  "name": "frontend_mentor_challenge_template",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@wdio/cli": "^7.16.14",
    "@wdio/local-runner": "^7.16.15",
    "@wdio/mocha-framework": "^7.16.15",
    "@wdio/spec-reporter": "^7.16.14",
    "@wdio/static-server-service": "^7.16.14",
    "autoprefixer": "^10.4.2",
    "chromedriver": "^99.0.0",
    "cpx-fixed": "^1.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "simple-autoreload-server": "^0.2.10",
    "tailwindcss": "^3.0.22",
    "wdio-chromedriver-service": "^7.2.8"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "serve": "npm-run-all --parallel watch simple-autoreload-server",
    "simple-autoreload-server": "npx autoreload-server -d ./public/ -p 3000 -b",
    "test": "npm-run-all build wdio-test",
    "watch": "npm run build -- --watch",
    "wdio-test": "npx wdio run wdio.conf.js",
    "pretty": "prettier --write 'challenges'",
    "cpx": "npx cpx-fixed 'challenges/DIRECTORY/**/*.{html,ico,jpg,png,svg,webmanifest}' public/DIRECTORY/ --watch",
    "tailwind": "npx tailwindcss -c challenges/DIRECTORY/tailwind.config.js -i challenges/DIRECTORY/style.css -o public/DIRECTORY/style.css"
  }
}
